<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="myDefault" extends="struts-default">

        <action name="login" class="LoginAction" method="login">
            <result name="success">index.jsp</result>
            <result name="login">login.jsp</result>
        </action>

        <action name="queryAll" class="LoginAction" method="queryAll">
            <result name="success">query2.jsp</result>
            <result name="login">login.jsp</result>
        </action>

        <action name="amend" class="LoginAction" method="amend">
            <result name="success">amend.jsp</result>
            <result name="login">login.jsp</result>
        </action>

        <action name="add" class="LoginAction" method="add">
            <result name="success">add.jsp</result>
            <result name="login">login.jsp</result>
        </action>
        <action name="find" class="LoginAction" method="find">
            <result name="success">amend.jsp</result>
        </action>
    </package>

</struts>